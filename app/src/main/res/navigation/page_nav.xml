<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/page_nav"
    app:startDestination="@id/main_menu_fragment">

    <fragment
        android:id="@+id/main_menu_fragment"
        android:name="com.nutversion1.nutandroidshowcase.fragments.MainMenuFragment"
        tools:layout="@layout/fragment_main_menu">
        <action
            android:id="@+id/go_to_fun_with_api_fragment_action"
            app:destination="@id/fun_with_api_fragment">
        </action>
        <action
            android:id="@+id/go_to_about_fragment_action"
            app:destination="@id/about_fragment">
        </action>
    </fragment>

    <fragment
        android:id="@+id/fun_with_api_fragment"
        android:name="com.nutversion1.nutandroidshowcase.fragments.FunWithApiFragment"
        tools:layout="@layout/fragment_fun_with_api">
        <action
            android:id="@+id/go_to_random_quote_fragment_action"
            app:destination="@id/random_quote_fragment">
        </action>
        <action
            android:id="@+id/go_to_hobbies_fragment_action"
            app:destination="@id/hobbies_fragment">
        </action>
        <action
            android:id="@+id/go_to_numbers_fragment_action"
            app:destination="@id/numbers_fragment">
        </action>
        <action
            android:id="@+id/go_to_translate_fragment_action"
            app:destination="@id/translate_fragment">
        </action>
        <action
            android:id="@+id/go_to_programming_memes_fragment_action"
            app:destination="@id/programming_memes_fragment">
        </action>
        <action
            android:id="@+id/go_to_aztro_fragment_action"
            app:destination="@id/aztro_fragment">
        </action>
        <action
            android:id="@+id/go_to_youtube_search_fragment_action"
            app:destination="@id/youtube_search_fragment">
        </action>
        <action
            android:id="@+id/go_to_football_fragment_action"
            app:destination="@id/football_fragment">
        </action>
        <action
            android:id="@+id/go_to_free_games_action"
            app:destination="@id/free_games_fragment">
        </action>
    </fragment>
    <fragment
        android:id="@+id/about_fragment"
        android:name="com.nutversion1.nutandroidshowcase.fragments.AboutFragment"
        tools:layout="@layout/fragment_about">
    </fragment>

    <fragment
        android:id="@+id/random_quote_fragment"
        android:name="com.nutversion1.nutandroidshowcase.fragments.RandomQuoteFragment"
        tools:layout="@layout/fragment_random_quote">
    </fragment>
    <fragment
        android:id="@+id/hobbies_fragment"
        android:name="com.nutversion1.nutandroidshowcase.fragments.HobbiesFragment"
        tools:layout="@layout/fragment_hobbies">
    </fragment>
    <fragment
        android:id="@+id/numbers_fragment"
        android:name="com.nutversion1.nutandroidshowcase.fragments.NumbersFragment"
        tools:layout="@layout/fragment_numbers">
    </fragment>
    <fragment
        android:id="@+id/translate_fragment"
        android:name="com.nutversion1.nutandroidshowcase.fragments.TranslateFragment"
        tools:layout="@layout/fragment_translate">
    </fragment>
    <fragment
        android:id="@+id/programming_memes_fragment"
        android:name="com.nutversion1.nutandroidshowcase.fragments.ProgrammingMemesFragment"
        tools:layout="@layout/fragment_programming_memes">
    </fragment>
    <fragment
        android:id="@+id/aztro_fragment"
        android:name="com.nutversion1.nutandroidshowcase.fragments.AztroFragment"
        tools:layout="@layout/fragment_aztro">
    </fragment>
    <fragment
        android:id="@+id/youtube_search_fragment"
        android:name="com.nutversion1.nutandroidshowcase.fragments.YoutubeSearchFragment"
        tools:layout="@layout/fragment_youtube_search">
    </fragment>
    <fragment
        android:id="@+id/football_fragment"
        android:name="com.nutversion1.nutandroidshowcase.fragments.FootballFragment"
        tools:layout="@layout/fragment_football">
    </fragment>
    <fragment
        android:id="@+id/free_games_fragment"
        android:name="com.nutversion1.nutandroidshowcase.fragments.FreeGamesFragment"
        tools:layout="@layout/fragment_free_games">
        <action
            android:id="@+id/go_to_free_game_detail_fragment_action"
            app:destination="@id/free_game_detail_fragment">
        </action>
    </fragment>

    <fragment
        android:id="@+id/free_game_detail_fragment"
        android:name="com.nutversion1.nutandroidshowcase.fragments.FreeGameDetailFragment"
        tools:layout="@layout/fragment_free_game_detail">
    </fragment>

</navigation>